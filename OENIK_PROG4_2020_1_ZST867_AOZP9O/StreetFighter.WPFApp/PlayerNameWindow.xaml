<Window x:Class="StreetFighter.WPFApp.PlayerNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StreetFighter.WPFApp"
        mc:Ignorable="d"
        Title="PlayerName" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1" Orientation="Vertical" Background="LightGray">
            <Label Content="Name of Player1:" FontWeight="ExtraBold" Margin="5" Padding="5" Background="LightGray" HorizontalContentAlignment="Center" FontSize="15"></Label>
            <TextBox Text="{Binding Player1.Name}" Margin="10" Padding="10"/>
            <Label Content="Name of Player2:" FontWeight="ExtraBold" Margin="5" Padding="5" Background="LightGray" HorizontalContentAlignment="Center" FontSize="15"></Label>
            <TextBox Text="{Binding Player2.Name}" Margin="10" Padding="10"/>
            <Label Content="" FontWeight="ExtraBold" Margin="5" Padding="5" Background="LightGray"></Label>
            <Button Click="Button_Click_1" Content="Begin Game" FontWeight="ExtraBold" Margin="10" Padding="10" Background="White"></Button>
        </StackPanel>
    </Grid>
</Window>
